<a href="/user/index" class="btn btn-primary">Back to User Index</a>
<a class="user-controls btn btn-success" href="/user/{{user._id}}/edit">Edit Profile</a>
<a href="/user/{{user._id}}?_method=delete" class="btn btn-danger user-controls">Delete Profile</a>
<p>Name: {{user.name}}</p>
<p>Email: {{user.local.email}}</p>
<p>Location: {{user.location}}</p>
<img class="profile-img" src="{{user.photo}}" alt="Photo of {{user.name}}">
<p>Interests:</p>
<div class="btn-group">
{{#each user.interests}}
  <div class="btn btn-primary">{{this}}</div>
{{/each}}
</div>
<p></p>
<p>Bio: {{user.bio}}</p>


<script>
  $(document).ready(function() {
    var currentUserId = "{{currentUser._id}}";
    var userPageId = "{{user._id}}"
    if (currentUserId != userPageId) {
      $(".user-controls").hide();
    }
  });
</script>
